name: {{PROJECT_NAME}}
options:
  bundleIdPrefix: {{BUNDLE_ID_PREFIX}}
  deploymentTarget:
    macOS: "14.0"
  xcodeVersion: "15.0"

settings:
  base:
    SWIFT_VERSION: "5.9"
    ARCHS: arm64
    ONLY_ACTIVE_ARCH: NO

configs:
  Debug: debug
  Release: release
  MAS: release

targets:
  {{PROJECT_NAME}}:
    type: application
    platform: macOS
    sources:
      - path: {{PROJECT_NAME}}/Sources
      - path: {{PROJECT_NAME}}/Resources
    settings:
      base:
        PRODUCT_BUNDLE_IDENTIFIER: {{BUNDLE_ID}}
        MARKETING_VERSION: "1.0.0"
        CURRENT_PROJECT_VERSION: "1.0.0"
        INFOPLIST_FILE: {{PROJECT_NAME}}/Resources/Info.plist
        GENERATE_INFOPLIST_FILE: NO
      configs:
        Debug:
          CODE_SIGN_IDENTITY: "-"
          CODE_SIGN_STYLE: Automatic
          CODE_SIGNING_ALLOWED: NO
          CODE_SIGN_ENTITLEMENTS: {{PROJECT_NAME}}/Resources/{{PROJECT_NAME}}.debug.entitlements
        Release:
          CODE_SIGN_IDENTITY: "-"
          CODE_SIGN_STYLE: Automatic
          CODE_SIGNING_ALLOWED: NO
        MAS:
          CODE_SIGN_IDENTITY: "3rd Party Mac Developer Application: YOUR NAME ({{TEAM_ID}})"
          CODE_SIGN_STYLE: Manual
          DEVELOPMENT_TEAM: {{TEAM_ID}}
          PROVISIONING_PROFILE_SPECIFIER: "{{PROFILE_NAME}}"
          CODE_SIGN_ENTITLEMENTS: signing/entitlements.mas.plist
    dependencies:
      - package: SwiftLintPlugins
        product: SwiftLintBuildToolPlugin
    postBuildScripts: []

  {{PROJECT_NAME}}Tests:
    type: bundle.unit-test
    platform: macOS
    sources:
      - path: {{PROJECT_NAME}}Tests
    settings:
      base:
        PRODUCT_BUNDLE_IDENTIFIER: {{BUNDLE_ID}}.tests
        INFOPLIST_FILE: {{PROJECT_NAME}}Tests/Info.plist
        GENERATE_INFOPLIST_FILE: YES
    dependencies:
      - target: {{PROJECT_NAME}}

packages:
  SwiftLintPlugins:
    url: https://github.com/realm/SwiftLint
    from: "0.57.0"

schemes:
  {{PROJECT_NAME}}:
    build:
      targets:
        {{PROJECT_NAME}}: all
        {{PROJECT_NAME}}Tests: [test]
    run:
      config: Debug
    test:
      config: Debug
      targets:
        - {{PROJECT_NAME}}Tests
    profile:
      config: Release
    analyze:
      config: Debug
    archive:
      config: MAS
